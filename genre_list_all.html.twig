{% extends 'admin_base.html.twig' %}

{% block titre %}
Liste des genres
{% endblock %}

{% block contenu %}

<div class="table-section">

  <div class="page-header">
    <h1>Genres de livres</h1>

    <a href="{{ path('ajouter_genre') }}" class="btn btn-primary iconText">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
           stroke-width="1.5" stroke="currentColor" class="add__icon">
        <path stroke-linecap="round" stroke-linejoin="round"
              d="M12 10.5v6m3-3H9m4.06-7.19-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
      </svg>

      <span class="addText">Nouveau genre</span>
    </a>
  </div>

  {% if genres is empty %}
    <p class="search-empty">
      Aucun genre pour le moment.
    </p>
  {% else %}

    <div class="books-grid">
      {% for genre in genres %}
        <div class="book-card book-card--center">

          <span class="genre-badge genre-badge--big">
            {{ genre.nom }}
          </span>

          <div class="card-actions">
            <a href="{{ path('modifier_genre', { id: genre.id }) }}"
               class="details-link">
              Modifier
            </a>

            <a href="{{ path('supprimer_genre', { id: genre.id }) }}"
               class="details-link details-link--danger"
               onclick="return confirm('Voulez-vous vraiment supprimer ce genre ?');">
              Supprimer
            </a>
          </div>

        </div>
      {% endfor %}
    </div>

  {% endif %}

</div>

{% endblock %}
